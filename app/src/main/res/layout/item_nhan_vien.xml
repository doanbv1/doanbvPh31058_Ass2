<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_maNv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã NV: NV001"
        android:textColor="#F61906"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_hoTen_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Họ tên: Nguyễn Văn A"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_Phong_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phòng ban: Hành chính"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_marginRight="30dp"
            android:id="@+id/img_pen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pencil"
            />
        <ImageView
            android:id="@+id/img_bin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bin"/>


    </LinearLayout>



</LinearLayout>